<?xml version="1.0" ?>
<robot name="linear_actuator">

  <!-- Base link fixed to the world when loaded without a base constraint -->
  <link name="base">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>

    <!-- VISUALS: compose a tube + endcap + two feet -->
    <!-- Main tube: cylinder along +Z. Centered at z=0.09 so it spans zâ‰ˆ0.0..0.18 -->
    <visual>
      <origin xyz="0 0 0.09" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.04" length="0.25"/>
      </geometry>
      <material name="alum"><color rgba="0.75 0.75 0.78 1"/></material>
    </visual>


    <!-- COLLISION: keep it simple & stable (just the tube) -->
    <collision>
      <origin xyz="0 0 0.09" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.04" length="0.25"/>
      </geometry>
    </collision>
  </link>

  <!-- Slider link that moves along +Z relative to base -->
  <link name="slider">
    <inertial>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.0005" ixy="0" ixz="0" iyy="0.0005" iyz="0" izz="0.0005"/>
    </inertial>

    <!-- cylinder body -->
    <visual>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <geometry><cylinder radius="0.01" length="0.25"/></geometry>
      <material name="blue"><color rgba="0.2 0.4 0.8 1"/></material>
    </visual>


    <collision>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <geometry><cylinder radius="0.01" length="0.2"/></geometry>
    </collision>
  </link>

  <!-- Prismatic joint: moves slider along Z with limits -->
  <joint name="actuator" type="prismatic">
    <parent link="base"/>
    <child link="slider"/>
    <!-- joint axis in parent frame -->
    <axis xyz="0 0 1"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
    <limit lower="0.0" upper="0.15" effort="200" velocity="1.0"/>
    <dynamics damping="5" friction="0.0"/>
  </joint>

</robot>
