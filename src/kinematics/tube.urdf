<robot name="tube_model">

  <!-- Single rigid body: a solid cylinder aligned with +Z -->
  <link name="tube">
    <inertial>
      <!-- Center of mass at link origin -->
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1.0"/>
      <!-- Solid cylinder inertia (m=1.0, r=0.05, L=0.60) -->
      <!-- Ixx = Iyy = (1/12) m (3 r^2 + L^2) = 0.030625 -->
      <!-- Izz = (1/2) m r^2 = 0.00125 -->
      <inertia ixx="0.030625" ixy="0" ixz="0"
               iyy="0.030625" iyz="0"
               izz="0.00125"/>
    </inertial>

    <!-- Visual appearance -->
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.60"/>
      </geometry>
      <material name="tube_color">
        <color rgba="0.8 0.8 0.85 1"/>
      </material>
    </visual>

    <!-- Collision (same simple cylinder) -->
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.60"/>
      </geometry>
    </collision>
  </link>

</robot>